<h1>User's Projects</h1><br/>
<%# <body style="background-color:yellow;"> %>
<table>
  <thead>
    <tr>
      <th><h2>Title</h2></th>
      <th><h2>Description </h2></th>
      <th><h2>Percent </h2></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
    <% if project.user ==current_user %>
      <tr>
        <td><h3><%= project.title %></h3></td>
        <td><h3><%= project.description %></h3></td>
        <td><h3><%= project.percent %></h3></td>
        <td><h3><%= link_to 'Show', project %></h3></td>
        <td><h3><%= link_to 'Edit', edit_project_path(project) %></h3></td>
        <td><h3><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></h3></td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

